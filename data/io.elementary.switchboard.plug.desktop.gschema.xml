<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
	<schema path="/io/elementary/switchboard/plug/desktop/" id="io.elementary.switchboard.plug.desktop">
		<key name="current-wallpaper-source" type="s">
			<default>'sys'</default>
			<summary>Currently selected wallpaper source.</summary>
			<description>Options are 'pic' (pictures), 'sys' (backgrounds), and 'cus' (custom)</description>
		</key>
		<key name="current-custom-path" type="s">
			<default>''</default>
			<summary>URI of currently chosen custom backgrounds folder</summary>
			<description>Used in conjunction with the 'cus' option of the 'current-wallpaper-source' key</description>
		</key>
	</schema>
</schemalist>

